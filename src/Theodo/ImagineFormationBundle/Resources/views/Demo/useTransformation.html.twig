{% extends 'TheodoImagineFormationBundle:layout:layout.html.twig' %}

{% block content %}
    <pre>
        <code class="php">
$imagine = new Imagine\Imagick\Imagine();
$transformation = new Imagine\Filter\Transformation();

$transformation
    ->strip()
    ->crop(new Imagine\Image\Point(780, 40), new Imagine\Image\Box(630, 840))
    ->thumbnail(new Imagine\Image\Box(315, 420), Imagine\Image\ImageInterface::THUMBNAIL_OUTBOUND)
    ->save($destinationPath)
;

//Open original picture using Imagine
$originalPicture = $imagine->open($originalPath);

//Apply transformation to the picture
$transformation->apply($originalPicture);
        </code>
    </pre>
    <br />
    <center>
        <img src="{{ asset('bundles/theodoimagineformation/images/destination.png') }}" alt="Destination Picture" />
    </center>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        pre {
            margin-top: 80px;
        }

        pre > code {
            font-family: monospace;
            font-size: 180%;
            line-height: 1.4em;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/theodoimagineformation/highlightjs/highlight.pack.js') }}" type="text/javascript"></script>

    <script>hljs.initHighlightingOnLoad();</script>
{% endblock %}
