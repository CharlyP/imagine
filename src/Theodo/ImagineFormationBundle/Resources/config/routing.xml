<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="theodo_imagine_formation_demo_useTransformation" pattern="/demo/use-transformation">
        <default key="_controller">theodo_imagine_formation.controller.demo:userTransformationAction</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="theodo_imagine_formation_demo_useFilter" pattern="/demo/use-filter">
        <default key="_controller">theodo_imagine_formation.controller.demo:useFilterAction</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
